<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "microFAVE!", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to raw('<i class="icomoon-home"></i>'), root_path %></li>
          <li><%= link_to raw('<i class="icomoon-question"></i>'), help_path %></li>
          <% if signed_in? %>
            <li><%= link_to raw('<i class="icomoon-users"></i>'), users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="icomoon-cog"></i><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to raw('<i class="icomoon-profile"></i>'), current_user %></li>
                <li><%= link_to raw('<i class="icomoon-settings"></i>'), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to raw('<i class="icomoon-exit"></i>'), signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
