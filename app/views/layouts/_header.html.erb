<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="navbar-brand">
      <%= link_to "Microfave!", root_path, id: "logo" %>
    </div>

    <button type="button" class = "navbar-toggle" data-toggle = "collapse" data-target = ".navbar-collapse">
      <span class = "icon-bar"></span>
      <span class = "icon-bar"></span>
      <span class = "icon-bar"></span>
    </button>
 
    <div class = "collapse navbar-collapse navHeaderCollapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to raw('<i class="icomoon-home"></i>'), root_path %></li>
          <% if signed_in? %>
            <li><%= link_to raw('<i class="icomoon-users"></i>'), users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="icomoon-cog"></i><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to raw('<i class="icomoon-profile"></i>'), current_user %></li>
                <li><%= link_to raw('<i class="icomoon-settings"></i>'), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to raw('<i class="icomoon-exit"></i>'), signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>
