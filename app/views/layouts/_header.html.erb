<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
      <div class="navbar-brand">
        <%= link_to "Microfave!", root_path, class: "playball", id: "logo" %>
      </div>

      <button type="button" class = "navbar-toggle" data-toggle = "collapse" data-target = ".navbar-collapse">
        <span class = "icon-bar"></span>
        <span class = "icon-bar"></span>
        <span class = "icon-bar"></span>
      </button>
      <div class = "collapse navbar-collapse navHeaderCollapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to raw('<i class="icomoon-home" title="Home"></i>'), root_path %></li>
          <% if signed_in? %>
            <li><%= link_to raw('<i class="icomoon-users" title="Users"></i>'), users_path %></li>
            <li><%= link_to raw('<i class="icomoon-profile" title="My profile"></i>'), current_user %></li>
            <li><%= link_to raw('<i class="icomoon-settings" title="Edit info"></i>'), edit_user_path(current_user) %></li>
            <li><%= link_to raw('<i class="icomoon-exit" title="Log out"></i>'), signout_path, method: "delete" %></li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </div>
  </div>
</header>
