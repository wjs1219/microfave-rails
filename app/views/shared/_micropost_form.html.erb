<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <div class="col-xs-12 col-md-4 col-md-offset-3 micropostmargin">
      <%= f.text_field :item, placeholder: "What's your current obsession?", :maxlength => 50, :autocomplete => "off" %>
    </div>

    <div class="col-xs-12 col-md-2 micropostmargin">
      <%= f.collection_select :category, Article::TYPES, :to_s, :to_s, :prompt => "What is it?", :include_blank => false %>
    </div>

    <div class="col-xs-12 col-md-4 col-md-offset-3 micropostmargin">
      <%= f.text_area :content, placeholder: "Tell us about it!", :maxlength => 260 %>
    </div>
    <div class="col-xs-12 col-md-2 micropostmargin">
      <%= f.submit "Post", class: "btn btn-large btn-primary" %>
    </div>
  </div>
<% end %>
