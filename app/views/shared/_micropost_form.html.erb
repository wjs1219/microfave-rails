<div class="container">
  <%= form_for(@micropost) do |f| %>

    <div class="row">
      <%= render 'shared/error_messages', object: f.object %>
    </div>
    <div class="row microfaveinput">
      <div class="row">
        <div class="col-xs-8 col-md-4 col-md-offset-3 .item">
          <%= f.text_field :item, placeholder: "What's your current obsession?", :maxlength => 50, :autocomplete => "off" %>
        </div>

        <div class="col-xs-4 col-md-2 .category">
          <%= f.collection_select :category, Article::TYPES, :to_s, :to_s, :prompt => "What is it?", :include_blank => false %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-3 .content">
          <%= f.text_area :content, placeholder: "Tell us about it!", :maxlength => 260 %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <%= f.submit "Post", class: "btn btn-large btn-primary center" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
