<% if signed_in? %>
  <div class="container">
    <div class="row"> 
      <%= render 'shared/user_info' %>
      <%= render 'shared/micropost_form' %>
    </div>
  </div>
  <div class="container">
    <h3 class="playball">Microfaves</h3>
    <%= render 'shared/feed' %>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="container">
    <h1>Welcome to <span class="playball">Microfave!</span></h1>

    <h2>
      Tell people about your favorite things
    </h2>
    <h2>
    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
    </h2>
  </div>
  </div>
<% end %>
