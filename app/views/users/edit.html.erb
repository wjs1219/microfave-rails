<% provide(:title, "Edit user") %>
<div class="container">
<h1><%= @user.username %></h1>
<div class="row">
  <h3>
    <%= gravatar_for(@user) %>
    <a href="http://gravatar.com/emails" target="_blank">change profile pic</a>
  </h3>
  <section>
    <%= form_for(@user) do |f| %>
      <%= render 'fields', f: f %><br>
      <%= f.submit "Save changes", class: "btn btn-large btn-primary center" %>
    <% end %>
  </section>
</div>
</div>
